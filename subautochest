-- Khai báo màu chính
local mainColor = {255, 192, 203}

-- Thiết lập khung menu
local menuFrame = display.newRect(display.contentCenterX, display.contentCenterY, display.contentWidth * 0.8, display.contentHeight * 0.8)
menuFrame:setFillColor(1, 1, 1)

-- Thiết lập menu
local menu = display.newGroup()
menu.x = display.contentCenterX
menu.y = display.contentCenterY

-- Tạo các mục menu
local menuItems = {
"Trang chủ",
"Sản phẩm",
"Dịch vụ",
"Giới thiệu",
"Liên hệ"
}

local itemHeight = 50

for i = 1, #menuItems do
local item = display.newRect(0, 0, menuFrame.width, itemHeight)
item:setFillColor(unpack(mainColor))
item.y = (i - 1) * itemHeight - (itemHeight / 2 * (#menuItems - 1))

local itemText = display.newText(menuItems[i], 0, 0, native.systemFontBold, 24)
itemText:setFillColor(1, 1, 1)
itemText.x = item.x
itemText.y = item.y

menu:insert(item)
menu:insert(itemText)
end

-- Hiển thị menu
menuFrame:toFront()
menu:toFront()
